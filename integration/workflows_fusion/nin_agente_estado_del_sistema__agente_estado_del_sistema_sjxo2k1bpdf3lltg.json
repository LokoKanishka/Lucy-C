{
  "name": "NIN | Agente: Estado del Sistema",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "agente-sistema",
        "responseMode": "lastNode",
        "options": {}
      },
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [
        -200,
        0
      ],
      "id": "wh-sis",
      "name": "Webhook",
      "webhookId": "agente-sistema-004"
    },
    {
      "parameters": {
        "command": "echo \"RAM:\" && free -h | head -2 && echo \"CPU:\" && top -bn1 | grep -E \"Cpu\" && echo \"DISCO:\" && df -h / && echo \"DOCKER:\" && docker ps --format \"{{.Names}} {{.Status}}\" 2>/dev/null"
      },
      "type": "n8n-nodes-base.executeCommand",
      "typeVersion": 1,
      "position": [
        50,
        0
      ],
      "id": "cmd-sis",
      "name": "Stats"
    }
  ],
  "connections": {
    "Webhook": {
      "main": [
        [
          {
            "node": "Stats",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {
    "executionOrder": "v1",
    "callerPolicy": "workflowsFromSameOwner",
    "availableInMCP": false
  }
}
